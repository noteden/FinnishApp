<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:FinnishApp.ViewModels"
    x:Class="FinnishApp.Views.FlashcardsStudyPage"
    x:DataType="vm:FlashcardsStudyViewModel">

    <Grid Background="#D1FAE5" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tytuł -->
        <TextBlock
            Grid.Row="0"
            Text="{Binding Title}"
            FontSize="20"
            FontWeight="Bold"
            HorizontalAlignment="Center"
            Margin="0,0,0,10"/>

        <!-- Karta -->
        <Border
            Grid.Row="1"
            Width="350" Height="150"
            Background="White"
            CornerRadius="8"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Padding="10">
            <TextBlock
                Text="{Binding DisplayText}"
                FontSize="24"
                TextAlignment="Center"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"/>
        </Border>

        <!-- Nawigacja -->
        <StackPanel
            Grid.Row="2"
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            Spacing="10"
            Margin="0,10,0,0">

            <Button
                Content="Poprzednia"
                Command="{Binding PreviousCommand}"
                IsEnabled="{Binding CanPrevious}"/>

            <Button
                Content="{Binding FlipButtonText}"
                Command="{Binding FlipCommand}"/>

            <Button
                Content="Następna"
                Command="{Binding NextCommand}"
                IsEnabled="{Binding CanNext}"/>

            <Button
                Content="Cofnij"
                Command="{Binding BackCommand}"
                Background="Red"
                Foreground="White"/>
        </StackPanel>
    </Grid>
</UserControl>