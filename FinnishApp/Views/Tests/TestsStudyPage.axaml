<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:FinnishApp.ViewModels"
    x:Class="FinnishApp.Views.TestsStudyPage"
    x:DataType="vm:TestsPageViewModel">

    <Grid Background="#D1FAE5" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek: nazwa kategorii -->
        <TextBlock
            Grid.Row="0"
            Text="{Binding Title}"
            FontSize="20"
            FontWeight="Bold"
            HorizontalAlignment="Center"
            Margin="0,0,0,10"/>

        <!-- Quiz wpisywania -->
        <Border
            Grid.Row="1"
            Background="White"
            CornerRadius="8"
            Padding="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Width="350">
            <StackPanel Spacing="12">
                <!-- słówko po polsku -->
                <TextBlock Text="{Binding CurrentPolish}" FontSize="24" HorizontalAlignment="Center"/>

                <!-- pole na wpisanie fińskiego -->
                <TextBox
                    Watermark="Wpisz po fińsku..."
                    Text="{Binding UserAnswer, UpdateSourceTrigger=PropertyChanged}"
                    FontSize="16"/>

                <!-- przycisk sprawdzenia -->
                <Button
                    Content="Sprawdź"
                    Command="{Binding CheckAnswerCommand}"
                    IsEnabled="{Binding IsAnswerNotEmpty}"/>

                <!-- wyświetlenie postępu -->
                <TextBlock
                    Text="{Binding ProgressDisplay}"
                    HorizontalAlignment="Right"/>
            </StackPanel>
        </Border>

        <!-- przycisk Cofnij -->
        <Button
            Grid.Row="2"
            Content="Cofnij"
            Width="90" Height="40"
            HorizontalAlignment="Left"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Margin="0,10,0,0"
            Background="Red"
            Foreground="White"
            Command="{Binding BackCommand}"/>
    </Grid>
</UserControl>